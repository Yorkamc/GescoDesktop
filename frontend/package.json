{
    "name":  "gesco-desktop-frontend",
    "version":  "1.0.0",
    "description":  "GESCO Desktop - Frontend Electron + React",
    "main":  "electron-main.cjs",
    "type":  "module",
    "scripts":  {
                    "dev":  "vite",
                    "dev:electron":  "concurrently \"npm run dev\" \"wait-on http://localhost:5173 \u0026\u0026 electron .\"",
                    "dev:full":  "concurrently \"npm run dev:backend\" \"npm run dev:electron\"",
                    "dev:backend":  "cd ../backend/src/Gesco.Desktop.UI \u0026\u0026 dotnet run",
                    "build":  "tsc \u0026\u0026 vite build",
                    "build:electron":  "npm run build \u0026\u0026 electron-builder",
                    "preview":  "vite preview",
                    "electron":  "electron .",
                    "dist":  "electron-builder",
                    "lint":  "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
                },
    "dependencies":  {
                         "@tanstack/react-query":  "^5.17.0",
                         "axios":  "^1.6.5",
                         "clsx":  "^2.1.0",
                         "date-fns":  "^3.3.1",
                         "electron-store":  "^8.1.0",
                         "electron-updater":  "^6.1.7",
                         "react":  "^18.2.0",
                         "react-dom":  "^18.2.0",
                         "react-hook-form":  "^7.49.3",
                         "react-router-dom":  "^6.21.3",
                         "recharts":  "^2.10.4",
                         "zustand":  "^4.5.0"
                     },
    "devDependencies":  {
                            "@types/node":  "^20.11.5",
                            "@types/react":  "^18.2.48",
                            "@types/react-dom":  "^18.2.18",
                            "@typescript-eslint/eslint-plugin":  "^6.19.0",
                            "@typescript-eslint/parser":  "^6.19.0",
                            "@vitejs/plugin-react":  "^4.2.1",
                            "autoprefixer":  "^10.4.17",
                            "concurrently":  "^8.2.2",
                            "electron":  "^28.2.0",
                            "electron-builder":  "^24.9.1",
                            "eslint":  "^8.56.0",
                            "eslint-plugin-react":  "^7.33.2",
                            "eslint-plugin-react-hooks":  "^4.6.0",
                            "postcss":  "^8.4.33",
                            "prettier":  "^3.2.4",
                            "tailwindcss":  "^3.4.1",
                            "typescript":  "^5.3.3",
                            "vite":  "^5.0.11",
                            "wait-on":  "^7.2.0"
                        }
}
