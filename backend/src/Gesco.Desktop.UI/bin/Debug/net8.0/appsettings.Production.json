{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Error"
    }
  },
  "AllowedHosts": "*",
  "Security": {
    "RequireHttps": true,
    "HideServerHeader": true,
    "EnableSecurityHeaders": true
  },
  "Database": {
    "EnableEncryption": true,
    "BackupInterval": "24:00:00"
  }
}
