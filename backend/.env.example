# Clave secreta para JWT (OBLIGATORIO - Genera una clave única)
# Debe tener al menos 32 caracteres
JWT_SECRET_KEY=TuClaveSecretaMuyLargaYSegura2024GescoDesktop12345RandomString

# Clave para encriptación de base de datos (OBLIGATORIO)
# Genera con: openssl rand -base64 32
SQLITE_ENCRYPTION_KEY=

# Password para base de datos SQLite (OPCIONAL - mejora seguridad)
SQLITE_PASSWORD=

SQLITE_DB_PATH=data/gesco_encrypted.db

# PostgreSQL para sincronización (OPCIONAL)
POSTGRESQL_CONNECTION_STRING=

# =====================================================
# APIS EXTERNAS
# =====================================================

# Laravel API para sincronización central (OPCIONAL)
LARAVEL_API_URL=
LARAVEL_API_KEY=

# =====================================================
# CONFIGURACIÓN DE APLICACIÓN
# =====================================================

# Entorno de la aplicación
ASPNETCORE_ENVIRONMENT=Development

# Puerto del backend (por defecto: 5100)
LOCAL_API_PORT=5100
ENABLE_HTTPS=true
# Sincronización
SYNC_INTERVAL_MINUTES=15
OFFLINE_MODE_ENABLED=true
MAX_OFFLINE_DAYS=30

# Nivel de logging
LOG_LEVEL=Information

# =====================================================
# CONFIGURACIÓN DE SEGURIDAD
# =====================================================

# Tiempo de expiración de tokens en horas (por defecto: 24)
JWT_EXPIRATION_HOURS=24

# Intervalo de backup automático en horas (por defecto: 6)
BACKUP_INTERVAL_HOURS=6

# Días para mantener backups (por defecto: 30)
BACKUP_RETENTION_DAYS=30

# Habilitar rate limiting (true/false)
ENABLE_RATE_LIMITING=true

# Máximo requests por minuto por IP
MAX_REQUESTS_PER_MINUTE=60

# Máximo requests por hora por IP
MAX_REQUESTS_PER_HOUR=1000

# =====================================================
# ELECTRON - CONFIGURACIÓN DE SEGURIDAD
# =====================================================

# Habilitar DevTools en producción (NUNCA en producción real)
ENABLE_DEVTOOLS=false

# Habilitar actualizaciones automáticas
ENABLE_AUTO_UPDATES=true

# URL del servidor de actualizaciones
UPDATE_SERVER_URL=

# =====================================================
# LICENCIAS Y ACTIVACIÓN
# =====================================================

# Verificación de licencia en días
LICENSE_CHECK_INTERVAL_DAYS=7

# Modo de activación (online/offline/hybrid)
ACTIVATION_MODE=hybrid

# =====================================================
# DESARROLLO - SOLO PARA DESARROLLO
# =====================================================

# Habilitar logging sensible (NUNCA en producción)
ENABLE_SENSITIVE_LOGGING=false

# Habilitar swagger en producción (NUNCA en producción real)
ENABLE_SWAGGER_IN_PRODUCTION=false

# Semilla para datos de prueba
DEV_SEED_DATA=true